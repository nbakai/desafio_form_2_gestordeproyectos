<p id="notice"><%= notice %></p>

<h1>Dashboard</h1>
<form >
        <%= form_tag(proyectos_path, :method => "get", id: "search-form") do %>
        <%= text_field_tag :search, params[:search], placeholder: "Filtrar estado (propuesta, en progreso o terminado)", style:' width:300px'; %>
        <button type="submit">Buscar</button>
        <% end %>
</form>
<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripci√≥n</th>
      <th>Fecha de comienzo</th>
      <th>Fecha de termino</th>
      <th>Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @proyectos.each do |proyecto| %>
      <tr>
        <td><%= proyecto.name %></td>
        <td><%= proyecto.description %></td>
        <td><%= proyecto.starting_date %></td>
        <td><%= proyecto.ending_date %></td>
        <td><%= proyecto.state %></td>
        <td><%= link_to 'Show', proyecto %></td>
        <td><%= link_to 'Edit', edit_proyecto_path(proyecto) %></td>
        <td><%= link_to 'Destroy', proyecto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

